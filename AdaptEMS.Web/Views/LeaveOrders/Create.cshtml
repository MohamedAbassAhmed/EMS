@model CreateLeaveOrderRequest
@{ ViewData["Title"] = "Create Leave Request";
}

<div class="tile mb-4">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-12">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-3">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RequestedLeaveDate" class="control-label"></label>
                    <input asp-for="RequestedLeaveDate" class="form-control" />
                    <span asp-validation-for="RequestedLeaveDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
               

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary justify-content-center" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-lg-12">
    </div>
    <div style="text-align:left">
        <a asp-action="GetEmployees">
            <button class="btn btn-outline-secondary" type="button">
                Back<i class="fa fa-share" aria-hidden="true"></i>
            </button>
        </a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}